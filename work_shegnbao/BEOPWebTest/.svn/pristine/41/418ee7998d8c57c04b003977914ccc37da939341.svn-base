:not(input):not(select):not(textarea) {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}
:focus {
    outline: none;
}

body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    -ms-content-zooming: none;
    font: 12px SourceSansPro,sans-serif;
    line-height: 20px;
    vertical-align: middle;
    overflow: hidden;
    background-color: #2b3034;
    color: #c7c7c7;
}

/* main frame */
#mainframe {
    width: 100%;
    height: 100%;
    font: 12px 'Microsoft YaHei',sans-serif;
    color: #c7c7c7;
}

#mainframe .frame {
    position: relative;
    width: 100%;
    height: 100%;
}

#header, #mainframe {
    background: #384043;
}

/* header */
#header {
    width: 100%;
    height: 40px;
    min-height: 40px;
}
.navbar-brand {
    font-weight: bold;
    height: 40px;
    padding: 10px 15px;
}
.dropdown-menu {
    font: 12px 'Microsoft YaHei';
}
.dropdown-menu .divider {
    height: 2px;
    padding: 0!important;
    margin: 5px 0;
}

/* panel */
#panelframe {
    width: 100%;
    height: 100%;
    position: relative;
    padding-top: 45px;
    background-color: #2b3034;
}
#panels {
    width: 100%;
    height: 100%;
    position: relative;
}

/* windows */
#windows {
    background: #2a2b2d;
    position: relative;
}
#windows > .window {
    position: absolute;
    left: 0;
    top: 36px;
    bottom: 0;
    right: 0;
}

/* layer panel */
#layerPanel {
    position: relative;
    overflow-y: auto;
}

/* toolbar */
#toolbar {
    width: 100%;
    height: 36px;
    vertical-align: middle;
    padding: 0 5px;
    background: #313639;
    border-top: 1px solid #2b3034;
    border-bottom: 1px solid #2b3034;
}

#toolbar > .tools-ctn {
    display: inline-block;
    height: 36px;
    line-height: 32px;
    vertical-align: middle;
}

#toolbar > .tools-ctn.option {
    float: right;
}

.tools-ctn > button {
    position: relative;
    padding: 0;
    margin: 0 1px;
    width: 28px;
    border: none;
    height: 28px;
    line-height: 28px;
    box-shadow: none;
    background-color: transparent;
    vertical-align: middle;
    font: 13px SourceSansPro,sans-serif;
}
.tools-ctn > button.t-active {
    background-color: #565d5f;
}

.tools-ctn > button > svg {
    fill: #c7c7c7;
    stroke: #c7c7c7;
    vertical-align: middle;
    text-align: center;
}
.tools-ctn > button.t-active > svg {
    fill: #fff;
    stroke: #fff;
}