<style>
    .glyphicon{
        cursor: pointer;
    }
    .table>tbody>tr>td{
        vertical-align: middle;
    }
    .fLeft{
        float: left;
    }
    #paneTable{
        width: calc(100% - 110px);
    }
    #tableSchedule .executor{
        width: 60px;
    }
    #tableSchedule .executor.hover{
        border-color: #61A5EA;
        box-shadow: 0 0 2px 1px #61a5ea;
    }
    #tableSchedule .time{
        width: 80px;
        padding-left: 0px;
    }
    #tableSchedule .time input{
        border-radius: 4px;
    }
    #tableSchedule tr td:first-of-type{
        width: 100px;
    }
    #tableSchedule tr td:last-of-type{
        width: 60px;
    }
    #tableSchedule .removeExecutor{
        cursor: pointer;
        margin-left: 2px;
    }

    #listPerson{
        width: 100px;
        border: 1px solid #eee;
        margin-left: 10px;
        border-radius: 4px;
        padding: 10px;
    }
    #listPerson li{
        cursor: pointer;
        padding: 3px 10px;
        border-top: 1px solid #eee;
    }
    #listPerson li.active {
        background:#838383
    }
    #listPerson li:first-of-type{
        border-top: none;
    }
    .iptTime{
        display: inline-block;
        width: calc(100% - 20px);
        min-width: 70px;
    }
    .btnRemove {
        display: none;
    }
    .time:hover .btnRemove {
        display: inline-block;
    }
    .form-control.danger, .form-control.danger:focus{
        border-color: #E84A4C;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(222, 10, 10, 0.6);
    }
    .table>tbody>tr>td.danger{
        background-color: #f2dede !important;
    }
</style>
<div class="panel panel-default" id="paneNav">
    <div class="panel-body">
        <div class="form-inline" >
            <label for="iptStartDate" class="label">开始日期</label><input type="text" class="form-control datetimepicker" id="iptStartDate" placeholder="开始日期"/>
            <select class="form-control" id="selCycle">
              <option value="1">周期1天</option>
              <option value="2">周期2天</option>
              <option value="3">周期3天</option>
              <option value="4">周期4天</option>
              <option value="5">周期5天</option>
              <option value="6">周期6天</option>
              <option value="7">周期7天</option>
              <option value="15">周期15天</option>
            </select>
            <button class="btn btn-primary" id="btnSave">保存</button>
        </div>
        <div style="margin: 20px 0 0 20px;height:100%;">
            <div class="fLeft" id="paneTable">
                <table class="table table-bordered" id="tableSchedule">
                    <thead>
                        <tr>
                            <th>巡更路线</th>
                            <th>时间</th>
                            <th>1</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="fLeft" id="panePerson">
                <ul class="list-unstyled" id="listPerson">

                </ul>
            </div>
        </div>
    </div>
</div>

