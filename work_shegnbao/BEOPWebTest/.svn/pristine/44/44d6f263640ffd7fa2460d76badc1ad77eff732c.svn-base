<style>
    #modalConfig {
        position: absolute;
    }

        #modalConfig .modal-backdrop{
            position: absolute;
        }
    /*optionConfig*/
    option.forbid{
        display: none;
    }
    #inputPeriodValue {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
        width: 50%;
    }
    #inputPeriodUnit {
        width: 50%;
    }
    #divGauge div:nth-child(odd){
        padding-left: 0;
    }
    #divGauge div:nth-child(even){
        padding-right: 0;
    }
    #divCompareDate div{
        padding-left: 0;
        padding-right: 30px;
    }
    #divCompareDate div:last-child{
        padding-right: 0
    }
    .gaugeGreen {
        background-color: lightseagreen;
    }
    .gaugeBlue {
        background-color: #428bca;
    }
    .gaugeRed {
        background-color: #ff6c60;
    }
    /*dataConfig*/
    #dataConfig{
        border-top: 1px solid #e5e5e5;
        height: 350px;
        overflow-y: auto;
    }
    .divConfigData {
        border: 1px solid #ccc;
        border-radius: 5px;
        position: relative;
        margin-top: 10px;
        margin-bottom: 10px;
        padding-top: 10px;
    }
        .divConfigData .row{
            margin: 0;
        }
    .dataTypeName{
        position: absolute;
        top: -10px;
        left: 5px;
        background-color: white;
    }
    .rowDataValue div{
        margin-top: 5px;
        margin-bottom: 5px;
        padding-top: 4px;
        padding-bottom: 4px;
        border-radius: 5px;
    }
    @media (min-width: 1200px) {
        .rowDataValue div {
            width: 23%;
            margin-left: 1%;
            margin-right: 1%;
        }
    }
    @media (min-width: 992px) and (max-width: 1199px){
        .rowDataValue div {
            width: 31.33333%;
            margin-left: 1%;
            margin-right: 1%;
        }
    }
    .dataDragTip {
        text-align: center;
        color: #ccc;
        border: 1px dashed #ccc ;
    }
    .dataDragTip:hover{
        border-color: #66afe9;
        cursor: pointer;
        outline: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
    }
    .dataDragTip:hover span{
        visibility: hidden;
    }
    .dataDragTip.addData{
        border-color: #66afe9;
        cursor: pointer;
        outline: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
    }
    .dataDragTip.addData span{
        visibility: hidden;
    }
    .divDSConfigure {
        background-color: #efeeee;
        border: 1px solid transparent;
        color: #4c9f42;
        cursor: pointer;
        font-size: 14px;
        height: 30px;
    }
        .divDSConfigure .contentDS{
            display: inline-block;
            text-overflow: ellipsis;
            overflow: hidden;
            width: 4em;
            white-space: nowrap;
        }
        .divDSConfigure .btnRemoveDS{
            top: 2px;
            color: #ccc;
            float: right;
        }
            .divDSConfigure:hover .btnRemoveDS{
                color:orange;
            }
    #configAlert {
        width: 80%;
        display: inline-block;
        position: absolute;
        left: 10px;
        bottom: -15px;
        text-align: center;
    }

</style>

<div class="modal fade" id="modalConfig"  role="dialog" aria-labelledby="templateType" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title" id="templateType" i18n="modalConfig.TITLE">
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-3 col-xs-4">
                        <label for="inputMode" i18n="modalConfig.option.LABEL_MODE"></label>
                        <select class="form-control" id="inputMode">
                            <option value="easy" i18n="modalConfig.option.MODE_CURRENT"></option>
                            <option value="fixed" i18n="modalConfig.option.MODE_FIXED"></option>
                            <option value="recent" i18n="modalConfig.option.MODE_RECENT"></option>
                            <option value="realTime" i18n="modalConfig.option.MODE_REAL_TIME"></option>
                            <option value="easyEnergy" i18n="modalConfig.option.MODE_CURRENT"></option>
                            <option value="easyCompareAnalyz" i18n="modalConfig.option.MODE_COMPARE_EASY"></option>
                            <option value="easyCompare" i18n="modalConfig.option.MODE_COMPARE_EASY"></option>
                            <option value="compareSensor" i18n="modalConfig.option.MODE_COMPARE_SENSOR"></option>
                            <option value="compareMeter" i18n="modalConfig.option.MODE_COMPARE_METER"></option>
                            <option value="gauge" i18n="modalConfig.option.MODE_GAUGE"></option>
                            <option value="weather" i18n="modalConfig.option.MODE_WEATHER">Weather</option>
                            <option value="realTimeDashboard" i18n="modalConfig.option.MODE_REAL_TIME"></option>
                            <option value="easyHistory" i18n="modalConfig.option.MODE_CURRENT"></option>
                        </select>
                    </div>
                    <div class="form-group col-lg-3 col-xs-4">
                        <label for="inputInterval" i18n="modalConfig.option.LABEL_INTERVAL"></label>
                        <select class="form-control" id="inputInterval">
                            <option value="m1" i18n="modalConfig.option.INTERVAL_MIN1"></option>
                            <option value="m5" selected i18n="modalConfig.option.INTERVAL_MIN5"></option>
                            <option value="h1" i18n="modalConfig.option.INTERVAL_HOUR1"></option>
                            <option value="d1" i18n="modalConfig.option.INTERVAL_DAY1"></option>
                            <option value="M1" i18n="modalConfig.option.INTERVAL_MON1"></option>
                        </select>
                    </div>
                    <div class="col-lg-6 col-xs-4">
                        <label for="divInputGroupPeriod"  i18n="modalConfig.option.LABEL_PERIOD"></label>
                        <div class="input-group" id="divInputGroupPeriod" style="width: 100%;">
                            <label for="inputPeriodValue"></label>
                            <input type="text" class="form-control" id="inputPeriodValue" placeholder="">
                            <label for="inputPeriodUnit"></label>
                            <select class="form-control" id="inputPeriodUnit">
                                <option value="hour" i18n="modalConfig.option.PERIOD_UNIT_HOUR"></option>
                                <option value="day" selected i18n="modalConfig.option.PERIOD_UNIT_DAY"></option>
                                <option value="month" i18n="modalConfig.option.PERIOD_UNIT_MON"></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-4">
                        <label for="inputPeriodDropDown" i18n="modalConfig.option.LABEL_PERIOD"></label>
                        <select class="form-control" id="inputPeriodDropDown">
                            <option value="today" i18n="modalConfig.option.PERIOD_DROP_DOWN_TODAY"></option>
                            <option value="threeDay" i18n="modalConfig.option.PERIOD_DROP_DOWN_THREE_DAY"></option>
                            <option value="yesterday" selected i18n="modalConfig.option.PERIOD_DROP_DOWN_YESTERDAY"></option>
                            <option value="thisWeek" i18n="modalConfig.option.PERIOD_DROP_DOWN_THIS_WEEK"></option>
                            <option value="lastWeek" i18n="modalConfig.option.PERIOD_DROP_DOWN_LAST_WEEK"></option>
                            <option value="thisYear" i18n="modalConfig.option.PERIOD_DROP_DOWN_THIS_YEAR"></option>
                        </select>
                    </div>
                    <div class="col-lg-6 col-xs-12">
                        <label for="divInputGroupTimeRange" i18n="modalConfig.option.LABEL_TIME_RANGE"></label>
                        <div class="input-group" id="divInputGroupTimeRange" style="width: 100%;">
                            <input class="form-control form_datetime" id="inputTimeStart" size="16" type="text">
                            <span class="input-group-addon" i18n="modalConfig.option.TIP_RANGE_TO"></span>
                            <input class="form-control form_datetime" id="inputTimeEnd" size="16" type="text">
                        </div>
                    </div>
                    <div class="form-group col-xs-6">
                        <label for="gaugeMode" i18n="modalConfig.option.LABEL_GAUGE_MODE"></label>
                        <select class="form-control" id="gaugeMode">
                            <option value="high" i18n="modalConfig.option.GAUGE_MODE_HIGH" selected></option>
                            <option value="low" i18n="modalConfig.option.GAUGE_MODE_LOW"></option>
                        </select>
                    </div>
                    <div class="col-xs-12" id="divGauge">
                        <div class="input-group">
                            <label for="gaugeLowerLimit" ></label>
                            <input type="text" class="form-control" value="0" id="gaugeLowerLimit" placeholder="" tabindex="1">
                            <span class="input-group-addon gaugeGreen" i18n="modalConfig.option.GAUGE_GREEN"></span>
                            <label for="normalLowerLimit"></label>
                            <input type="text" class="form-control" value="4" id="normalLowerLimit" placeholder="" tabindex="2">
                            <span class="input-group-addon gaugeBlue" i18n="modalConfig.option.GAUGE_NORMAL"></span>
                            <label for="normalUpperLimit"></label>
                            <input type="text" class="form-control" value="6" id="normalUpperLimit" placeholder="" tabindex="3">
                            <span class="input-group-addon gaugeRed" i18n="modalConfig.option.GAUGE_RED"></span>
                            <label for="gaugeUpperLimit"></label>
                            <input type="text" class="form-control" value="10" id="gaugeUpperLimit" placeholder="" tabindex="4">
                        </div>
                    </div>
                    <div class="form-group col-xs-6" id="divRealTimeInterval">
                        <label for="inputRealTimeInterval" i18n="modalConfig.option.LABEL_REAL_TIME_INTERVAL"></label>
                        <select class="form-control" id="inputRealTimeInterval">
                            <option value="30s" i18n="modalConfig.option.REAL_TIME_INTERVAL_30_SEC"></option>
                            <option value="1m" i18n="modalConfig.option.REAL_TIME_INTERVAL_1_MIN"></option>
                            <option value="5m" i18n="modalConfig.option.REAL_TIME_INTERVAL_5_MIN" selected></option>
                            <option value="10m" i18n="modalConfig.option.REAL_TIME_INTERVAL_10_MIN"></option>
                            <option value="30m" i18n="modalConfig.option.REAL_TIME_INTERVAL_30_MIN"></option>
                        </select>
                    </div>
                    <div class="form-group col-xs-4">
                        <label for="inputComparePeriod" i18n="modalConfig.option.LABEL_COMPARE_PERIOD"></label>
                        <select class="form-control" id="inputComparePeriod">
                            <option value="hour" i18n="modalConfig.option.COMPARE_PERIOD_HOUR"></option>
                            <option value="day" i18n="modalConfig.option.COMPARE_PERIOD_DAY" selected></option>
                            <option value="week" i18n="modalConfig.option.COMPARE_PERIOD_WEEK"></option>
                            <option value="month" i18n="modalConfig.option.COMPARE_PERIOD_MONTH"></option>
                        </select>
                    </div>
                    <div class="col-xs-9" id="divCompareDate">
                        <div class="form-group col-xs-6">
                            <label for="inputCompareDate1" i18n="modalConfig.option.LABEL_COMPARE_DATE1"></label>
                            <input type="text" class="form-control form_datetime compare" id="inputCompareDate1" placeholder="">
                        </div>
                        <div class="form-group col-xs-6">
                            <label for="inputCompareDate2" i18n="modalConfig.option.LABEL_COMPARE_DATE2"></label>
                            <input type="text" class="form-control form_datetime compare" id="inputCompareDate2" placeholder="">
                        </div>
                    </div>
                    <div class="col-xs-6" id="divHistoryRange">
                        <label for="inputHistoryRange" i18n="modalConfig.option.LABEL_HISTORY_RANGE"></label>
                        <select class="form-control" id="inputHistoryRange">
                            <option value="hour" i18n="modalConfig.option.HISTORY_RANGE_HOUR"></option>
                            <option value="day" i18n="modalConfig.option.HISTORY_RANGE_DAY" selected></option>
                            <option value="week" i18n="modalConfig.option.HISTORY_RANGE_WEEK"></option>
                            <option value="month" i18n="modalConfig.option.HISTORY_RANGE_MONTH"></option>
                            <option value="year" i18n="modalConfig.option.HISTORY_RANGE_YEAR"></option>
                        </select>
                    </div>
                    <!--<div class="form-group col-xs-6" id="divWeather">
                        <label for="cityCode" i18n="modalConfig.option.LABEL_WEATHER"></label>
                        <select type="text" class="form-control" id="cityCode" placeholder="">
                        </select>
                    </div>-->
                </div>
            </div>
            <div class="modal-body" id="dataConfig">
                <div><span I18n="modalConfig.data.DATA_CONFIG_TITLE_PRE"></span><span I18n="modalConfig.data.DATA_CONFIG_TITLE_TYPE1"></span></div>
            </div>
            <div class="modal-footer">
                <div id="configAlert"></div>
                <button type="button" class="btn btn-primary disabled" id="startConfig">
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->