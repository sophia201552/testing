<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>simple data table Demo</title>
    <link href="../../bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="simpleDataTable.css" rel="stylesheet" type="text/css">
    <script src="../../jquery-2.1.4.min.js"></script>
    <script src="../../jquery.twbsPagination.min.js"></script>
    <script src="simpleDataTable.js"></script>
    <style>
        .demo {
            width: 60%;
            margin: 10px auto;
        }
    </style>
</head>
<body>
<div class="demo">
    <h4>Demo 1: load by array data</h4>

    <div id="demoLoadByArrayData">

    </div>
</div>

</body>

<script id="demo_load_array_data">
    var data = [];
    for (var i = 0; i < 1000; i++) {
        data.push({
            id: i,
            invdate: "2007-10-01",
            name: "testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest",
            note: "note" + i,
            amount: "200.00",
            tax: "10.00",
            total: "210.00"
        });
    }
    $('#demoLoadByArrayData').simpleDataTable({
        data: data,
        colNames: ['Inv No', 'Date', 'Client', 'Amount', 'Tax', 'Total', 'Notes'],
        colModel: [
            {name: 'id', index: 'id', width: 60, formater: function (data) {
                return
            }},
            {name: 'invdate', index: 'invdate', width: 90, type: "date"},
            {name: 'name', index: 'name', width: 100, copy: true},
            {name: 'amount', index: 'amount', width: 80, align: "right", type: "float", copy: true},
            {name: 'tax', index: 'tax', width: 80, align: "right", type: "float"},
            {name: 'total', index: 'total', width: 80, align: "right", type: "float"},
            {name: 'note', index: 'note', width: 150, sortable: false}
        ]
    });
</script>
</html>