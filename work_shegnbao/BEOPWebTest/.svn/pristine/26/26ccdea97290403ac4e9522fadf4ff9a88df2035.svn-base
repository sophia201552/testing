<style>
    .rule-li {
        list-style-type: none;
        width: 120px;
        float: left;
        text-align: center;
        margin: 0 10px 20px 0;
    }

    .rule-li input, .rule-li select {
        margin-top: 10px;
    }

    .rule-li .rule-index {
        display: inline-block;
        line-height: 20px;
        border-radius: 20px;
        background: #5cb85c;
        color: #fff;
        padding: 0 5px;
    }

    .rule-li .rule-index:hover {
        background: #337ab7;
    }

    .rule-index.active .is-show {
        display: inline-block;
    }
</style>
<!--@formatter:off-->
<script type="text/html" id="tpl_rule_view">
    <!for (var m = 0; m < list.length; m++) {!>
        <!var item = list[m] ;!>
