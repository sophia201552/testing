                        <option value="2">不定长</option>
                    <!}else{!>
                        <option value="1">定长</option>
                        <option value="2" selected="selected">不定长</option>
                    <!}!>
                </select>
                <!if (item.lengthType == beop.tag.constants.ruleValueLength.FIXED){!>
