            <div class="rule-index">
                <span class="rule-num"><!=m+1!></span>
                <span class="glyphicon glyphicon-plus-sign is-show cp dn rule-add"></span>
                <span class="glyphicon glyphicon-remove-sign is-show cp dn rule-remove"></span>
            </div>
            <select class="form-control rule-type">
                <!if (item.type == beop.tag.constants.ruleType.STRING){!>
                    <option value="1" selected="selected">字符串</option>
                    <option value="2">数字</option>
                    <option value="3">不限定</option>
                <!}else if (item.type == beop.tag.constants.ruleType.NUMBER){!>
                    <option value="1">字符串</option>
                    <option value="2" selected="selected">数字</option>
                    <option value="3">不限定</option>
                <!}else{!>
                    <option value="1">字符串</option>
