<style>
    #workflow-set{background:#fff;min-height: 600px;}
    .mt50{margin-top: 50px;}
    .wd80{width:80px;}
    ul,li{list-style: none;}
    ul{padding-left: 0;}
    .tc{text-align: center;}
    .dn{display:none;}
    #workflow-set h1{font-size: 30px;font-weight: 600;text-align: center;}
    #workflow-set li{height:35px;line-height:35px;}
    #workflow-set input[checkbox]{margin-right:5px;position:relative;top:1px;}
    #mailNotifiOptionsUl{margin:20px auto 10px auto;width:185px;font-size: 16px;color:#333;}
    #mailNotifiOptionsUl span{margin-left: 6px;}
    .mailErrorInfo{color:red;width:185px;margin:0 auto;}
    .mailErrorInfo em{margin-right: 5px;vertical-align:sub;}

</style>
<div class="col-xs-8 col-xs-offset-2">
    <div class="col-xs-12 mt50" id="workflow-set">
        <div class="row">
            <div class="col-xs-12">
                <h1 i18n="workflow.set.EMAIL_NOTIFICATION_OPTION"></h1>
                <div class="col-xs-12">
                    <ul id="mailNotifiOptionsUl">
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="0" /><span i18n="workflow.set.TASK_COMMENTED_UPON"></span></label>
                        </li>
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="1" /><span i18n="workflow.set.TASK_ABOUT_EXPIRE"></span></label>
                        </li>
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="2" /><span i18n="workflow.set.ASSIGNMENT_COMPLETE"></span></label>
                        </li>
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="3" /><span i18n="workflow.set.ASSIGNMENT_STARTS"></span></label>
                        </li>
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="4" /><span i18n="workflow.set.TASK_SUSPENDED"></span></label>
                        </li>
                        <li>
                            <label><input type="checkbox" name="mailNotifiOptions" value="5" /><span i18n="workflow.set.ASSIGNMENT_REVIEWED"></span></label>
                        </li>
                    </ul>
                    <div class="mailErrorInfo dn"><em>*</em><span i18n="workflow.set.SELECT_LEAST_ONE"></span></div>
                </div>
                <div class="tc"><button id="btnSet" type="button" class="btn btn-primary tc wd80" data-dismiss="modal" style="position: relative;top:25px;" i18n="workflow.set.CONFIRM"></button></div>
            </div>
        </div>
    </div>
</div>