<!-- 报表连页显示 -->
<div style="width: 100%; height: 100%; overflow-x: hidden; overflow-y: hidden;" id="beopReport">
    <link rel="stylesheet" href="/static/projectReports/report.css"/>
    <div class="step-container col-xs-12 col-md-8 col-md-offset-2 report-block scrollbar">
        <div class="step-play-container">
            <div class="step-play-list">
                {% for reportItem in report %}
                    <div class="step-item-container" id="report-unit-{{ loop.index }}">
                        <h1 class="page-header">{{ reportItem.name }}</h1>
                        {% set outer_loop = loop %}
                        {% for unit in reportItem.units %}
                            <div class="report-unit" id="report-unit-{{ outer_loop.index }}-{{ loop.index }}">
                                <div class = "well well-sm">
                                    <h3>{{ unit.unitName }}</h3>
                                </div>
                                {% for subUnit in unit.subUnits %}
                                    <div class="summary">{{ subUnit.summary|safe }}</div>
                                    {% if subUnit.Options.x != "" %}
                                        <div class="canvas-container" style="height: 550px;">
											<div class="chart-param" style="display: none;">{{ subUnit }}</div>
										</div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!--右边导航-->
    <nav class="reportNavigation hidden-print hidden-xs hidden-sm">
        <div class="input-append date form_datetime">
            <span class="add-on"><i class="icon-calendar"></i></span>
            <input type="text" value="" readonly>
        </div>
        <ul class="nav">
            {% for reportItem in report %}
                <li class="reportChapter">
                    <a class="ellipsis" title="{{ reportItem.name }}" href="#report-unit-{{ loop.index }}">{{ reportItem.name }}</a>
                    <ul class="nav">
                        {% set outer_loop = loop %}
                        {% for unit in reportItem.units %}
                            <li class="reportChapterItem">
                                <a class="ellipsis" report-unit="report-unit-{{ outer_loop.index }}-{{ loop.index }}"
                                   title="{{ unit.unitName }}" href="#report-unit-{{ outer_loop.index }}-{{ loop.index }}">{{ unit.unitName }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </nav>
</div>
