<style>
    .sharpview-mode .sharpview-wrap {
        display: block;
    }

    .sharpview {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        border: 1px solid black;
        display: none;

        background: #000;
    }
    
    .sharpview>.sliders {
        width: 100%;
        height: 100%;
        padding: 15px 20px;
        position: relative;
        z-index: 101;
        perspective: 700px;
    }

    .sharpview>.sliders>div {
        /*width: 960px;
        height: 700px;*/
        position: absolute;
        left: 8%;
        right: 8%;
        top: 5%;
        bottom: 5%;
        /*margin-left: -480px;
        margin-top: -350px;*/
        opacity: 0;
        transform-style: "preserve-3d";
        transition: transform .5s cubic-bezier(0.26,.86,.44,.985),opacity .5s cubic-bezier(0.26,.86,.44,.985);

        background: #fff;
        box-shadow: 0 0 15px #fff;
    }

    /* Linear Layout */
    .linear-1>.present.bound-left { transform: rotateY(10deg); }
    .linear-1>.present.bound-right { transform: rotateY(-10deg); }
    .linear-1>div:first-child { transform-origin: 20% 0; }
    .linear-1>div:last-child { transform-origin: 80% 0; }
    .linear-1>div.present {
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }
    .linear-1>div.past { transform: translate3d(-90%, 10%, -100px); }
    .linear-1>div.future { transform: translate3d(90%, 10%, -100px); }

