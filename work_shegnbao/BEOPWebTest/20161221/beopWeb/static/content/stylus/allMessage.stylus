//左侧一级菜单
navBar-title-width = 180px
base-transition = .3s all 0s ease
left-nav-bar-switch-active-bgcolor = #fff
right-nav-bar-switch-active-bgcolor = #546478
right-nav-bar-switch-active-font-color = #fff
#all_messages_box
  margin 0 auto
  color #333333
  position relative
  width 100%
  height 100%

  ul
    list-style none
    padding 0
  //一级菜单列表
  .nav-bar
    left 0
    background #EAEDF1
    position absolute
    top 0
    bottom 0
    transition base-transition

    .nav-bar-title
      height 70px
      background #d9dee4
      line-height 70px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-weight bold
      text-indent 20px

    .nav-bar-list
      li
        line-height 40px
        height 40px
        user-select none

      a
        color #666
        cursor pointer
        width navBar-title-width
        height 40px
        display block
        user-select none

        &:hover
          background #F4F6F8

        &.active
          background left-nav-bar-switch-active-bgcolor

        .nav-title
          padding-left 20px
          display block
          width 100px
          float left

        .nav-extend
          display block
          height 40px
          margin-left 20px
          width 40px
          float right

          .unread-messages-count
            display block
            padding 0px 8px
            line-height 24px
            text-align 24px
            color #FFF
            margin 8px 8px 0px 0px
            background #09C
            border-radius 2px

  &.message-navBar-hidden .nav-bar
    left -(navBar-title-width)

.allMessage-navBar-transform
  width 12px
  height 40px
  cursor pointer
  line-height 40px
  position absolute
  left 168px
  z-index 1
  top 48%
  background-color #F7F7F7
  color #546478
  border-top-left-radius 50px
  border-bottom-left-radius 50px
  transition base-transition

&.message-navBar-hidden .allMessage-navBar-transform
  left 0px
  border-top-right-radius 50px
  border-bottom-right-radius 50px

.allMessage-body
  position absolute
  left navBar-title-width
  top 0
  right 0
  bottom 0
  background #FFFFFF
  transition left .3s 0s
  padding 10px

  .body-content
    padding 8px
    position relative

    #message-kind
      padding-top 20px
      width inherit

      ul
        padding-left 0px
        list-style none

        li
          float left
          width 115px
          position relative
          display block
          user-select none

        a
          border 1px solid #d9dee4
          background-color #d9dee4
          height 32px
          margin-left 2px
          text-decoration none
          color #444444
          display inline-block
          padding: 5px 10px
          cursor pointer
          user-select none
          width 93%
          text-align center

          &.active
            border 1px solid right-nav-bar-switch-active-bgcolor
            background-color right-nav-bar-switch-active-bgcolor
            color right-nav-bar-switch-active-font-color
    #message-list-container
      height 67vh
      width inherit
      overflow-y auto
      overflow-x hidden

      .message-footer
        position fixed
        left navBar-title-width - 2px
        margin-left 20px
        bottom 20px
        transition left .3s 0s
        width calc(100% - 233px)

      table
        width 100%

      .pagination-container
        float right

        .pagination
          float right
          margin-top 5px
          margin-right 0

          a
            color #337ab7 !important
            border 1px solid #ddd !important

          .active a
            color rgb(234, 193, 36) !important

      .state-column
        width 30px
        padding-left 15px

      .content-column
        width calc(50% - 60px)
        padding-left 15px
        min-height 38px
        line-height 27px
        padding-top 5px

      tr
        line-height 38px
        color #999
        padding 0
        border 1px solid #e1e6eb

        th
          background-color #f5f6fa
          font-weight normal
          height inherit
          float left

        td
          height inherit
          float left

        .msg-read-state
          font-size 50px
          color #428bca

          &.isRead
            color #fff

      tfoot
        tr
          height 45px
          line-height 45px

          .msg-user-face-control a
            display inline-block
            background #EAEDF1
            border-radius 0
            height 30px
            margin-right 5px
            padding-top 5px

.message-navBar-hidden
  .allMessage-body
    left 0
    width calc(100%)

    #message-list-container
      .message-footer
        left 0px
        width calc(100% - 30px)
