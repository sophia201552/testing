<style>
.crosswisePlane{
    width: 100%;
    height: 100%;
}
.timeQueryPlane{
    width: 100%;
    height: 75px;
    border-bottom:1px solid #414B5E;
    padding:21px 0px 0px 15px;
}
.timeQueryPlane button{
	display: block;
	float:left;
	background: #C0C2C7;
	color:black;
	border-radius:8px;
}
.echartPlane{
	width:100%;
	height:calc(100% - 75px);
	overflow-y:auto;
	overflow-x:hidden;
}
.timeStyle{
	display:block;
	float:left;
	width:190px;
	height: 34px;
    padding: 6px 12px;
    font-size: 20px;
    font-weight: 200;
    text-align: center;
    line-height: 1.42857143;
    color: white;
    background-color:rgba(255,255,255,0);
    border:none;
    border-radius: 4px;
}
	.elec,.gas,.water{
		width:25px;
		height:14px;
		border-radius: 2px;
		background: #CCCCCC;
	}
	.elec.active{
		background:#1790CF;
	}
	.gas.active{
		background:#1C7099;
	}
	.water.active{
		background:#88B0BB;
	}
	.btnLegend{
		width:100%;
		height:55px;
		padding-top:20px;
	}
	.btnLegend ul {
		margin:0 auto;
		width:500px;
		height:50px;
	}
	.btnLegend ul li{
		list-style: none;
		float:left;
		width:150px;
	}
	.btnLegend ul li:hover{
		cursor:pointer;
	}
	.btnLegend ul li span{
		display:block;
		float:left;
		height:15px;
		line-height: 15px;

	}
	.btnLegend ul li span:last-child{
		padding-left:3px;
	}
	#crosswiseChart{
		width:100%;
		height:calc(100% - 55px);
		overflow-y:auto;
		overflow-x:hidden;
	}
	.crosswiseChart{
		width:100%;
		height:820px;

	}
#crosswiseChart::-webkit-scrollbar{
	width:8px;
}
#crosswiseChart::-webkit-scrollbar-track {
	border:1px gray solid;
	border-radius:10px;
	-webkit-box-shadow:0 0 6px gray inset;
	}

#crosswiseChart::-webkit-scrollbar-thumb {
	border-radius:10px;
	background-color:rgba(155,155,155,0.2);
	-webkit-box-shadow:0 0 6px gray inset;
	}
#crosswiseChart::-webkit-scrollbar-corner {
		  background-color: black;
	}
</style>
<div class="crosswisePlane">
	<div class="timeQueryPlane">
		<button class="btn" id="choiceTime" datetimepicker=""><span class="glyphicon glyphicon-time" ></span><span>Time</span></button>
		<input class="timeStyle" id="iptTime" size="16" type="text" data-format="yyyy-mm-dd" value="2016-11-7" >
<!-- 		<button class="btn" id="sortData"><span class="glyphicon glyphicon-sort-by-attributes"></span><span>Sort</span></button> -->
	</div>
	<div class="echartPlane">
		<div class="btnLegend">
			<ul>
				<li><span class="elec active" type="elec"></span><span> Electricity</span></li>
				<li><span class="gas active" type="gas"></span><span> Natural Gas</span></li>
				<li><span class="water active" type="water"></span><span> Water</span></li>
			</ul>
		</div>
		<div id="crosswiseChart">
			<div class="crosswiseChart"></div>
		</div>
	</div>
</div>