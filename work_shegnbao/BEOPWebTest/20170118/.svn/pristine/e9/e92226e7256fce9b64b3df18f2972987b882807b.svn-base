<style>
    #modalRank, #modalRank .modal-backdrop {position: absolute;}
</style>

<div class="modal" id="modalRank" data-backdrop="static">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Outdoor Dry Bulb Temperature Trend</h4>
        </div>
        <div class="modal-body form-wrap">
            <div class="form-horizontal row">
                <!-- Options -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="">Points list</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" id="rankPointList" placeholder="Please input points" />
                    </div>
                </div>
            </div>

            <div class="radio">
                <label>
                    <input type="radio" name="optionsRadios" id="radioRankAsc" value="option1" checked>
                        升序
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="optionsRadios" id="radioRankDesc" value="option2">
                        降序
                </label>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-submit" id="btnSubmit">Submit</button>
        </div>
    </div>
</div>
</div>