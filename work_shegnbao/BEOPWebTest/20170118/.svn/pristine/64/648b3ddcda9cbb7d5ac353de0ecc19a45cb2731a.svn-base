<style>
    #editFolder {
        margin-top: 6px;
    }

    #finishFolder {
        margin-top: 6px;
    }

    #editFolder span:first-child,
    #finishFolder span:first-child {
        padding-right: 10px;
        font-size: 14px;
    }

    .tag-tree-do {
        overflow: hidden;
        display: inline-block;
        border: 1px solid #CCCCCC;
        border-radius: 6px;
        padding: 5px 8px;
        margin-top: 6px;
    }

    #tagTreeBtnBox .tag-operation {
        padding: 0 10px;
        border-right: 1px solid #CCCCCC;
    }

    #tagTreeBtnBox .tag-operation:last-child {
        border-right: none;
    }

    #tagTreeBtnBox .tag-operation span:first-child {
        padding-right: 5px;
    }

    .tagTreeAddBox {
        background: inherit;
        border: none;
        margin: 3px 10px;
        float: right;
    }

    #tagTreeAdd, #tagTreeAdd + button {
        padding: 5px 10px;
    }

    @media (max-width: 1366px) {
        #tagTreeBtnBox .btn {
            padding: 5px 10px;
        }

        #editFolder {
            padding: 5px 10px;
        }

        .tag-tree-do {
            padding: 5px 0;
        }
    }
</style>

<div class="tagTreeInfo" id="tagTreeInfo" style="height: 100%;">
    <header class="oh tagTreeInfoHeader" id="tagTreeInfoHeader">
        <span class="fl">结构</span>
        <input type="text" class="form-control fl w200 dn m5" id="searchTreeNode" placeholder="search" item="search">

        <div class="markView">
            <button type="button" class="btn btn-default fr mt10 dn" id="finishFolder" item="finish">
                <span class="icon iconfont">&#xe803;</span>完成结构
            </button>
        </div>
        <div class="markView">
            <span class="icon iconfont fr dn" style="margin-left: 10px;cursor: pointer;" title="格式刷">&#xe63f;</span>
            <button type="button" class="btn btn-default fr dn" id="editFolder" title="修改" item="edit">
                <span class="icon iconfont">&#xe7fb;</span>修改结构
            </button>
        </div>

    </header>
    <div class="tagZtreeBox pr" id="tagZtreeBox">
        <article id="tagTreeBtnBox" class="tagTreeBtnBox tc dn" item="btnGroup">
            <div class="tag-tree-do clearfix">
                <div class="fl cp tag-operation" id="tagTreeForward">
                    <span class="glyphicon glyphicon-circle-arrow-left"></span>
                    <span>向前</span>
                </div>
                <div class="fl cp tag-operation" id="tagTreeBack">
                    <span class="glyphicon glyphicon-circle-arrow-right"></span>
                    <span>后退</span>
                </div>
            </div>
            <div class="btn-group tagTreeAddBox" style="background:inherit; border:none; margin-top: 6px;">
                <button type="button" class="btn btn-default" id="tagTreeAdd">添加</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" id="addEmptyFolder">添加空目录</a></li>
                </ul>
            </div>
        </article>
        <ul id="tagTreeUl" class="ul ztree ml10 gray-scrollbar"></ul>
        <ul id="apiTreeSearchUl" class="ul ztree gray-scrollbar dn"></ul>
    </div>
</div>


