<style type="text/css">
    #tableListFaults tr {
        cursor: pointer;
    }
    #tableListFaults tr:hover {
        background-color: #4298ba;
    }
</style>

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Fault options (click to edit)</h4>
    </div>
    <div class="modal-body" style="height: calc(100% - 50px);">

        <div class="row" style="height: 100%; overflow-y: auto;">
            <table class="table table-striped table-hover" id="tableListFaults">
                <thead>
                    <tr>
                        <th>Grade</th>
                        <th>Name</th>
                        <th>Equipment</th>
                        <th>Description</th>
                        <th>Last</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>