<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/static/app/CxTool/css/lib/bootstrap.min.css" rel="stylesheet">

    <link href="/static/app/CxTool/css/animate.css" rel="stylesheet">
    <link href="/static/app/CxTool/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

<div class="loginColumns animated fadeInDown">
    <div class="row">

        <div class="col-md-6">
            <h2 class="font-bold" i18n="debugTools.login.WELCOME_TEXT2"></h2>

        </div>
        <div class="col-md-6">
            <div class="ibox-content">
                {% if error %}
                <p class=error><strong><span i18n="debugTools.login.LOGON_FAILURE"></span>:</strong> {{ error }}
                    {% endif %}

                <form class="m-t" role="form" action="/point_tool/login" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" required="" name="username"
                               i18n="placeholder=debugTools.login.USER_NAME"/>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required="" name="pwd"
                               i18n="placeholder=debugTools.login.PASSWORD"/>
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b"
                            i18n="debugTools.login.SIGN_IN"></button>
                </form>
                <p class="m-t">
                    <small><span i18n="debugTools.login.EDITION"></span> 1.0</small>
                </p>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6 pull-right" i18n="debugTools.login.COMPANY_NAME"></div>
    </div>
</div>
<script src="/static/scripts/lib/jquery-2.1.4.min.js"></script>
<script src="/static/scripts/i18n/i18n.js"></script>
<script src="/static/scripts/core/common.js"></script>
</body>
<script>
    $(function () {
        var I18n = new Internationalization();
        I18n.fillArea($(".loginColumns"));
    })
</script>
</html>
