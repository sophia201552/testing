<style>
#indexMain{
    background-image: url("static/app/temperatureControl/img/bg_login.png");
    background-size: 100% 100%;
    background-attachment: fixed;
}
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active {
    /*transition: background-color 5000s ease-in-out 0s;*/
    -webkit-text-fill-color: #fff;
}
.form-control::-webkit-input-placeholder{
    color: rgba(255, 255, 255, 0.4);
}
#loginPage { 
    position: relative;
    padding: 4rem 1rem;
    width: 100%;
    height: 100%;
    min-height: 568px;
    font-size: 1.6rem;
    overflow: hidden;
}
#divTempIcon {
    width: 7rem;
    height: 7rem;
    margin: 3rem auto 6rem;
}
#divTempIcon img{
    width: 100%;
    height: 100%;
}
#divLogInfo > div {
    margin: 0 auto 15px;
}
#divLogInfo .input-group {
    border-radius: 10px;
}
#divLogInfo .glyphicon {
    /*font-size: 2.2rem;*/
}
#divLogInfo .input-group-addon {
    background: rgba(0,0,0,0.4);
    color: orange;
    border-right: 1px solid rgba(255,255,255,.3);
    border: none;
    border-right: 1px solid rgba(255,255,255,0.3);
}
#divLogInfo .form-control {
    height: 3.2rem;
    border: none;
    background: rgba(0,0,0,0.4);
    color: #fff;
    box-shadow: none;
}
#divLogInfo .form-control:-webkit-autofill{
    -webkit-text-fill-color: #fff;
    -webkit-box-shadow: 0 0 0px 1000px #999 inset;
    box-shadow: 0 0 0px 1000px #999 inset;
}
#divLoginAlert {
    font-size: 1rem;
    text-align: center;
    padding: 0.5rem;
    margin: 0 auto;
}
#divCopyRight {
    font-size: 1.5rem;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 1rem;
    width: 100%;
    color: #bbb;
}
.registerBox {
    text-align:center;
}
.bottomBox{
    margin: 0;
    width: 70%;
    height: 4rem;
    line-height: 4rem;
    border-top: 1px solid rgba(255,255,255,0.4);
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -35%;
}
#registerPerson {
    color: #7c7d7a;
    padding: 1rem 5px;
    font-size: 1.4rem;
}
#forgetPwd {
    color: #171a1a;
    padding: 1rem 5px;
    font-size: 1.25rem;
    font-weight: bolder;
}
#btnLogin{
    margin-top: 4.5rem !important;
}
#btnLogin button{
    background: #ffa300;
    color: #fff;
    width: 15rem;
    margin: 0 auto;
    height: 3.8rem;
    line-height: 3.8rem;
    border: none;
    padding: 0;
    border-radius: 1.5rem;
    box-shadow: 1px 1px 1px #999;
    font-size: 1.8rem;
    outline: none;
}
#btnLogin button.hover{
    background: #e99706;
}
#btnLogin button:focus{
    outline: none;
}
.divLanguage {
    position: absolute;
    padding: 3px 10px 3px 10px;
    top: 10px;
    right: 10px;
    border: 1px solid #eee;
    border-radius: 4px;
    opacity: 0.7;
    display: block;
    z-index: 10;
    cursor: pointer;
    font-size: 13px;
}
.divLanguage a {
    text-decoration: none
}
.divLanguage span {
    color: #eee;
}
.divLanguage:hover #selectLanguage {
    display: block;
    background-color: rgba(255,255,255,0.2);
}
#selectLanguage a:hover span{
    color: #333;
}
</style>
<div id="loginPage">
    <div id="divAppTempLanguage" class="divLanguage">
        <a>
            <span i18n="admin.index.LANGUAGE"></span>
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" id="selectLanguage">
            <li><a value="zh"><span class="vMiddle">中文</span></a></li>
            <li><a value="en"><span class="vMiddle">English</span></a></li>
        </ul>
    </div>
    <div id="divTempIcon">
        <img src="static/app/temperatureControl/img/logo_login.png"/>
    </div>
    <div id="divLogInfo">
        <div class="form-group" id="divUserName">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                <input type="text" class="form-control" id="userName" i18n="placeholder=admin.index.INTER_NAME" autocomplete="off">
            </div>
        </div>
        <div class="form-group" id="divPwd">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                <input type="password" class="form-control" id="password" i18n="placeholder=admin.index.INTEE_PASSWORD" autocomplete="off">
            </div>
        </div>
        <div class="form-group" id="btnLogin">
            <button type="button" class="btn btn-primary btn-lg btn-block" i18n="admin.index.LOGIN">登    录</button>
        </div>
        <div class="form-group registerBox">
            <span id="forgetPwd" i18n="admin.index.FORGET_PASS">忘记密码</span>        </div>
    </div>
    <div id="divLoginAlert"></div>
    <div class="form-group registerBox bottomBox">
        <span id="registerPerson" i18n="admin.index.REGISTER">注册</span>
    </div>
    <!--<div id="divCopyRight">
        <small>R&amp;B TECHNOLOGY CO.LTD</small>
    </div>-->
</div>