<style type="text/css">
    #layoutsConfigModal, #layoutsConfigModal .modal-backdrop { position: absolute; }
    #layoutsConfigModal .modal-dialog {
        width: 700px;
    }
    @media (min-width: 1600px) {
        #layoutsConfigModal .modal-dialog {
            width: 900px;
        }
    }

    #layoutsConfigModal .CodeMirror {
        line-height: 1.55em;
        font-size: 12px;
        font-family: "Fira Mono",Monaco,"Andale Mono","Lucida Console","Bitstream Vera Sans Mono","Courier New",Courier,monospace;
        overflow: hidden;
        height: 100%;
        background: 0 0;
        color: #39464E;
    }

    #layoutsConfigModal .form-textarea {
        max-width: 100%;
        min-width: 300px;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }
    #layoutsConfigModal .write-content {
        margin-top: 10px;
    }

    #layoutsConfigModal .toolbox-config-ctn .panel-body {
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        margin-top: 10px;
    }
    #layoutsConfigModal .toolbox-config-ctn .form-group:last-child {
        margin-bottom: 0;
    }
    #layoutsConfigModal .toolbox-config-ctn .form-group-footer {
        text-align: center;
    }
    #layoutsConfigModal .btn.on {

    }
    /* 添加最大化样式 */
    #layoutsConfigModal .close { font-size: 16px; margin-left: 10px; }
    #layoutsConfigModal .btn-resize-full { display: block; }
    #layoutsConfigModal .btn-resize-small { display: none; }
    #layoutsConfigModal.maxium-screen .btn-resize-full { display: none; }
    #layoutsConfigModal.maxium-screen .btn-resize-small { display: block; }
    #layoutsConfigModal.maxium-screen .modal-dialog,
    #layoutsConfigModal.maxium-screen .modal-content {
        width: 100%;
        margin: 0;
        border: none;
        border-radius: 0;
    }
    #layoutsConfigModal.maxium-screen .modal-dialog { height: 100%; }
    #layoutsConfigModal.maxium-screen .modal-content { min-height: 100%; }
    #layoutsConfigModal.maxium-screen .form-textarea {
        width: 100% !important;
    }
</style>

<div class="modal" id="layoutsConfigModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
                <button type="button" class="close btn-resize-full">
                    <span class="glyphicon glyphicon-resize-full"></span>
                </button>
                <button type="button" class="close btn-resize-small">
                    <span class="glyphicon glyphicon-resize-small"></span>
                </button>
                <h4 class="modal-title">自定义布局</h4>
            </div>
            <div class="modal-body form-wrap">
                <div class="write-content">
                    <textarea rows="10" cols="40" class="form-textarea"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-submit">提交</button>
            </div>
        </div>
    </div>
</div>