/* slider */

.slider-container {
    float: left;
    width: 200px;
    height: 538px;
    background-image: linear-gradient(to bottom, #282f48, #171d34)
}
.slider-header-text {
    width: 100%;
    height: 42px;
    background-image: linear-gradient(93deg, #5b88f7, #5bb7f7);
}
.slider-header-text h3 {
    height: 100%;
    line-height: 42px;
    margin-left: 14px;
    font-size: 20px;
    font-weight: 500;
    color: #ffffff;
}
.slider-list h4 {
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    text-align: left;
    color: #e1e1e1;
    background-color:#333e5e;
    padding-left: 14px;
}
.slider-list-item {
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 10px;
    color: #e1e1e1;
    position: relative;    
    padding-left: 14px;
    border-bottom: 1px solid rgba(54, 63, 93, .5);    
}

.slider-list-item:hover,
.slider-list-item:focus {
    background-color: #363f5d;
    color: #10b8f9;
}

li:focus.slider-list-item::after,
li:hover.slider-list-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 29px;
    background-color: #10b8f9;
    box-shadow: 0px 4px 8px 0 rgba(16, 184, 249, 0.38);
}

.list-type {
    height: 256px;
}
.list-affect {
    height: 60px;
}
.list-energy,
.list-grade {
    height: 90px;
}
.list-energy,
.list-grade,
.list-affect,
.list-type {
    overflow: hidden;
}

.item-type {
    float: left;
}

.item-num {
    float: right;
    width: 26px;
    height: 14px;
    line-height: 14px;
    margin: 7px 8px 0 0;    
    border-radius: 4px;
    font-size: 10px;
    text-align: center;
    color: #eda830;
}


