/* 删除模态框样式 */
.modal-container {
  width: 430px;
  height: 260px;
  padding: 40px 24px 32px;
  border-radius: 6px;
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 6px 20px 0 rgba(23, 28, 53, 0.5);
}
.modal-container > div:first-child {
  height: calc(100% - 31px);
}
.modal-container > div > h3 {
  font-size: 24px;
  color: rgb(29, 29, 29);
  margin-bottom: 12px;
}
.modal-container > div > span {
  font-size: 18px;
  color: rgb(153, 153, 153);
}
.button-container > button {
  float: right;
  width: 81px;
  margin-left: 12px;
  height: 31px;
  line-height: 31px;
  border-radius: 4px;
  background-color: #ffffff;
  border: solid 1px #d3d3d3;
  cursor: pointer;
  padding: 0 16px;
  color: #999999;
  margin-left: 12px;
}
.button-container > button:last-child:hover {
  background: #fff;
}
.button-container > button:first-child {
  border-color: #5182f1;
  background-color: #5182f1;
  color: #ffffff;
}
