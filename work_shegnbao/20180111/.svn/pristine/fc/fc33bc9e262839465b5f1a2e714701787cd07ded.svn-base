.tableWrap {
  width: 100%;
  height: 100%;
  position: relative;
}
.tableWrap table {
  width: auto;
  min-width: 100%;
  border-collapse: separate;
  border-spacing: 0;
}
.tableWrap table td,
.tableWrap table th {
  padding: 16px 8px;
  word-break: break-all;
}
.table-header {
  height: 50px;
}
.table-body {
  max-height: calc(100% - 50px);
  overflow: auto;
}
.table-header table {
  border-radius: 4px 4px 0 0;
}
.table-body table {
  margin-top: -50px;
}

.table-header th {
  /* background: #f7f7f7; */
  font-weight: 500;
  text-align: left;
}
.table-body tr {
    /* border-bottom: 1px solid #e9e9e9; */
    -webkit-transition: background 0.3s ease;
    transition: background 0.3s ease;
    cursor: pointer;
}

/* 颜色控制 */
.table-header {
  background-color: transparent;
}
.table-body {
  background-color: transparent;
}
.table-header th {
  color: #666666;
  border-bottom: 1px solid #e9e9e9;
}
.table-body tr:nth-child(even){
  background-color: rgba(235,238,247,.5);
}
.table-body tr.active,
.table-body tr:hover{
  background: rgba(235,238,247,.5);
}
.table-body td {
color: #333;
}
/* 颜色控制 end */
