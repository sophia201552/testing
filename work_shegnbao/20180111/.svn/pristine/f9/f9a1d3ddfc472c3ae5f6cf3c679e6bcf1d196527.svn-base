.widget-sdt-container .table-body tr.active td {
    background: #1e78e6 !important;
    color: #fff;
}

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.widget-sdt-container .show-more {
    width: 15px;
    margin-left: 5px;
    cursor: pointer;
}

.widget-sdt-search-container {
    display: none;
}

.widget-sdt-container .pagination > li > a,
.widget-sdt-container .pagination > li > span {
     /* border: 1px solid #ccc !important;  */
     border: none;
     color: #666;
}
.fl {
    float: left;
}
.mt10 {
    margin-top: 5px;
}
.ml10 {
    margin-left: 10px;
}
.widget-sdt-footer-left .pageSizeSelect{
    height: 25px;
    font-size: 12px;
    padding: 3px 10px;
    color: #666;
}
.widget-sdt-container .pagination>.active>a{
    color:rgb(0,167,206);
    font-weight: bold;
    background-color: transparent;
}
.widget-sdt-container .pagination > li > a:hover{
    border-radius: 4px;
}
.widget-sdt-container .pagination > li.disabled > a{
    color: #999;
}
.widget-sdt-container .pagination > li.prev > a{
    transform:rotate(180deg);
    position: relative;
    top: -2px;
    padding: 3px 12px;
}
.widget-sdt-container .pagination > li.next > a{
    padding: 3px 12px;
}
.widget-sdt-paging{
    display: inline-block;
}
.widget-sdt-prev-page{
