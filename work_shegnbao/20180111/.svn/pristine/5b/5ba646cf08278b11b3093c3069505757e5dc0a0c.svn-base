<style>
    #modalCustom, #modalCustom .modal-backdrop {position: absolute;}
    .tab-host #modalCustom {
        display: block;
        position: fixed;
        right: 20%;
}
</style>

<div class="modal" id="modalCustom" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" i18n="modalConfig.TITLE">Config</h4>
            </div>
            <div class="modal-body form-wrap">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-2 col-md-offset-1">
                            <label for="inputMode" i18n="modalConfig.option.CHART_TYPE">Type</label>
                            <select class="form-control" id="inputMode">
                                <option i18n="modalConfig.option.MODE_REAL_TIME" value="realTime">RealTime</option>
                                <option i18n="modalConfig.option.MODE_HISTORY" value="history">History</option>
                            </select>
                        </div>
                        <div id="divRealTimeCycle" class="col-sm-2">
                            <label for="selRealInterval" i18n="modalConfig.option.LABEL_INTERVAL">Cycle</label>
                            <select class="form-control" id="selRealInterval">
                                <option value="m1" i18n="modalConfig.option.INTERVAL_MIN1">m1</option>
                                <option value="m5" i18n="modalConfig.option.INTERVAL_MIN5">m5</option>
                                <option value="h1" i18n="modalConfig.option.INTERVAL_HOUR1">H1</option>
                                <option value="d1" i18n="modalConfig.option.INTERVAL_DAY1">D1</option>
                                <option value="M1" i18n="modalConfig.option.INTERVAL_MON1">M1</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" id="rangeSel" style="margin-top: 10px;">
                        <div class="col-sm-2 col-md-offset-1">
                            <label for="hisCycleMode" i18n="modalConfig.option.LABEL_MODE">模式</label>
                            <select class="form-control" id="hisCycleMode">
                                <option value="fixed" i18n="modalConfig.option.MODE_FIXED" style="display: block;">固定周期</option>
                                <option value="recent" i18n="modalConfig.option.MODE_RECENT" style="display: block;">最近周期</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <label for="selHisInterval" i18n="modalConfig.option.LABEL_INTERVAL">采样周期</label>
                            <select class="form-control" id="selHisInterval">
                                <option value="m1" i18n="modalConfig.option.INTERVAL_MIN1">1分钟</option>
                                <option value="m5" i18n="modalConfig.option.INTERVAL_MIN5">5分钟</option>
                                <option value="h1" i18n="modalConfig.option.INTERVAL_HOUR1">1小时</option>
                                <option value="d1" i18n="modalConfig.option.INTERVAL_DAY1">1天</option>
                                <option value="M1" i18n="modalConfig.option.INTERVAL_MON1">1个月</option>
                            </select>
                        </div>
                        <div class="col-sm-6" id="historyTmRange" style="display: block;">
                            <label for="divInputGroupTimeRange" i18n="modalConfig.option.LABEL_TIME_RANGE">时间范围</label>
                            <div class="input-group" id="divInputGroupTimeRange" style="width: 100%;">
                                <input class="form-control form_datetime" id="timeStart" size="16" type="text" data-format="yyyy-mm-dd hh:ii" datetimepicker/>
                                <span class="input-group-addon" i18n="modalConfig.option.TIP_RANGE_TO">到</span>
                                <input class="form-control form_datetime" id="timeEnd" size="16" type="text" data-format="yyyy-mm-dd hh:ii" datetimepicker/>
                            </div>
                        </div>
                        <div class="col-sm-6" id="historyTmCycle" style="display: none;">
                            <label for="inputGroupPeriod" i18n="modalConfig.option.LABEL_PERIOD">时间周期</label>
                            <div class="input-group" id="inputGroupPeriod" style="width: 100%;">
                                <label for="inputPeriodValue"></label>
                                <input type="text" class="form-control" id="inputPeriodValue" placeholder="">
                                <label for="inputPeriodUnit"></label>
                                <select class="form-control" id="inputPeriodUnit">
                                    <option value="hour" i18n="modalConfig.option.PERIOD_UNIT_HOUR">小时</option>
                                    <option value="day" i18n="modalConfig.option.PERIOD_UNIT_DAY">天</option>
                                    <option value="month" i18n="modalConfig.option.PERIOD_UNIT_MON">月</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
                <div id="editor" contenteditable="true" class="form-control" dropable="true">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-submit" id="btnSubmit">Submit</button>
            </div>
        </div>
    </div>
</div>