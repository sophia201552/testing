/* dropdownlist start */
.dropdownWrap {
  width: 100%;
  box-sizing: border-box;
  cursor: pointer;
  color: rgb(104, 114, 150);
  position: relative;
  padding: 0;
  user-select: none;
}
.dropdownWrap .dropdownTitle {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-shadow: none;
  box-shadow: none;
  margin: 0;
  padding: 0;
  background-color: rgb(25, 31, 55);
  cursor: pointer;
  display: block;
  height: 32px;
  line-height: 30px;
  padding: 0 32px 0 12px;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dropdownWrap .caretDown {
  font-size: 12px;
  position: absolute;
  top: 1px;
  pointer-events: none;
  line-height: 30px;
  right: 12px;
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: none;
}
.background.show {
  display: block;
}
.dropdownUl {
  overflow: auto;
  position: absolute;
  background-color: rgb(25, 31, 55);
}


.dropdownUl .dropdownLiWrap {
  overflow: auto;
  height: 100%;
}

.dropdownUl .dropdownSearch {
  height: 36px;
  width: 100%;
  padding: 4px 4px;
}
.dropdownUl .dropdownSearch input {
  height: 28px;
  width: 100%;
  color: rgb(110, 119, 150);
  background-color: rgb(25, 31, 55);
  border-radius: 4px;
  border: none;
  padding-left: 16px;
  padding-right: 16px;
  border-bottom: 1px solid rgba(110, 119, 150, 0.4);
}
.dropdownUl .dropdownSearch input::-webkit-input-placeholder {
  color: rgb(110, 119, 150);
}
.dropdownUl .dropdownSearch input:focus {
  outline: none;
}
.dropdownLi {
  height: 30px;
  line-height: 30px;
  box-sizing: border-box;
  cursor: pointer;
  color: rgb(110, 119, 150);
  padding: 0 12px 0 12px;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  user-select: none;
}
.dropdownLi:hover {
  background-color: rgba(255, 255, 255, 0.1);
}
.dropdownLi.selected {
  background-color: rgba(255, 255, 255, 0.2);
}

/* dropdownlist end */
/* white */
.dropdownWrap.white .dropdownTitle {
  background-color: #fff;
}
.dropdownUl.white {
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.2);
}
.dropdownUl.white .dropdownSearch input {
  background-color: #fff;
}

.dropdownUl.white .dropdownLi:hover {
  background-color: rgba(0, 0, 0, 0.1);
}
.dropdownUl.white .dropdownLi.selected {
  background-color: rgba(0, 0, 0, 0.2);
}
/* white end */
