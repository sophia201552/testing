<style>
    .color-pan {
        width: 20px;
        height: 18px;
        display: inline-block;
    }

    .color-setting-list li {
        margin: 20px 0;
    }

    .color-setting-list input {
        width: 65px;
        text-align: center;
    }

    #dialogContent {
        width: 598px;
    }

    #rangeWrapper {
        width: 90%;
        margin: 20px auto;
        -webkit-user-select: none;
        user-select: none;
    }

    #rangeWrapper .irs-bar {
        background: -moz-linear-gradient(left, #3434ff,#35ffff,#36fe94,#6ff71c,#9fff39,#ffa922,#ff2323);
        background: -webkit-linear-gradient(left, #3434ff,#35ffff,#36fe94,#6ff71c,#9fff39,#ffa922,#ff2323);
        background: -ms-linear-gradient(left, #3434ff,#35ffff,#36fe94,#6ff71c,#9fff39,#ffa922,#ff2323);
        background: linear-gradient(left, #3434ff,#35ffff,#36fe94,#6ff71c,#9fff39,#ffa922,#ff2323);
    }

    #rangeWrapper .irs-bar.anotherColor {
        background: -moz-linear-gradient(left, #0a6592,#2a9d8f,#e9c46a,#f4a261,#E71D36);
        background: -webkit-linear-gradient(left, #0a6592,#2a9d8f,#e9c46a,#f4a261,#E71D36);
        background: -ms-linear-gradient(left, #0a6592,#2a9d8f,#e9c46a,#f4a261,#E71D36);
        background: linear-gradient(left, #0a6592,#2a9d8f,#e9c46a,#f4a261,#E71D36);
    }
    #colorWrapper{
        width: 90%;
        height: 28px;
        margin: 0 auto;
    }
    #colorWrapper>div{
        text-align: left;
        padding: 0;
    }
    #colorWrapper label{
        text-align: left;
        margin: 0;
        line-height: 28px;
    }
    
    #gradientColorWrapper{
        height: auto;
        width: 100%;
        cursor: pointer;
    }
    #gradientColorWrapper::after{
        content: '';
        display: block;
        clear: both;
        width: 0;
        height: 1px;
    }
    #gradientColorWrapper .item{
        float: left;
        width: 36px;
        height: 18px;
        margin: 0;
        line-height: 18px;
        text-align: center;
    }
    #gradientColorWrapper .item label{
        text-align: center;
        height: 14px;
        line-height: 14px;
    }
    #gradientColorWrapper .item .colorBlock{
        display: block;
        height: 4px;
        width: 100%;
    }
    #gradientColorWrapper input{
        text-align: left;
        width: 100%;
    }
</style>
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only" i18n="observer.widgets.CLOSE">close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel" i18n="observer.menu.TITLE_TEMPERATURE_CONFIGURE"></h4>
    </div>
    <div class="modal-body" style="text-align: center;">
        <div class="row">
            <div class="list-unstyled color-setting-list">
                <div id="rangeWrapper">
                    <input type="text" id="slider-range" class="dn"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="colorWrapper">
                <div class="col-md-3"><label i18n="observer.entities.COLOR"></label></div>
                <div class="col-md-9"><div id="gradientColorWrapper"><input type="text" id="gradientColor" placeholder="0,#000;1,#fff;"/></div></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" i18n="admin.panelManagement.CANCEL"></button>
        <button type="button" class="btn btn-primary" id="btnSaveSetting" i18n="admin.panelManagement.CONFIRM"></button>
    </div>
</div>