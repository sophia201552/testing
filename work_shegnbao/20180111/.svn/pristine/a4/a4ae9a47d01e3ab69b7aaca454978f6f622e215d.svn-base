.toolWrap {
  width: 226px;
  height: 151px;
  border-radius: 4px;
  background-color: rgb(245, 248, 249);
  box-shadow: 0px 8px 12px 0 rgba(85, 88, 93, 0.6);
  position: absolute;
  bottom: 16px;
  left: 50px;
  padding: 28px 16px;
  z-index: 999;
  display: none;
}
.toolWrap.show {
  display: block;
}
.toolWrap .tool {
  height: 18px;
  line-height: 18px;
  margin-bottom: 18px;
  font-size: 14px;
  color: rgb(29, 29, 29);
}
.toolWrap .tool > div {
  float: left;
}
.toolWrap .tool > div:nth-child(2) {
  margin: 0 28px 0 12px;
  width: 56px;
}
.toolWrap .tool > div:first-child {
  font-size: 15px;
  line-height: 15px;
}

.toolWrap .tool:nth-child(2) > .toolToggle > div {
  line-height: 10px;
}
.toolWrap .tool > div svg {
  vertical-align: middle;
}

.language {
  float: right;
  line-height: 40px;
}
.language {
  position: relative;
  width: 58px;
  height: 20px;
  line-height: 20px;
  margin-right: 18px;
  border-radius: 4px;
  background-color: transparent;
  border: solid 1px rgba(29, 29, 29, 0.16);
  cursor: pointer;
  padding-left: 4px;
  font-size: 10px;
  color: rgb(51, 51, 51);
}
.language > div {
  width: 100%;
}
.language > div > i {
  float: right;
  color: rgb(51, 51, 51);
  font-size: 8px;
  margin-right: 8px;
}

.selectLan {
  position: absolute;
  top: 19px;
  left: 0;
  width: 60px;
  height: 28px;
  z-index: 999;
  padding-left: 12px;
  line-height: 28px;
  border-radius: 2px;
  background-color: rgb(245, 248, 249);
  box-shadow: 0px 6px 10px 0 rgba(103, 107, 112, 0.38);
  -webkit-box-shadow: 0px 6px 10px 0 rgba(103, 107, 112, 0.38);
}
