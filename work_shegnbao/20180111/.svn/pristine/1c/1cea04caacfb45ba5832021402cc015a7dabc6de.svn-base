.clear:after {
  content: '';
  height: 0;
  line-height: 0;
  visibility: hidden;
  clear: both;
  display: block;
}

.AddRuleWrap {
  width: 100%;
  height: 100%;
}
.titleWrap {
  width: 100%;
  height: 58px;
  border-bottom: 1px solid #d8d8d8;
  padding: 0 16px 0 24px;
}
.titleWrap .titleText {
  float: left;
  line-height: 58px;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
}
.titleWrap .titleBtn {
  height: 30px;
  line-height: 30px;
  padding: 0 12px;
  float: right;
  margin-top: 13px;
  background: #70ce7b;
  box-shadow: 0 4px 10px 0 #fff;
  border-radius: 22px;
  color: #fff;
  cursor: pointer;
}
.titleWrap .titleBtn > span {
  font-size: 14px;
  vertical-align: top;
  margin-left: 6px;
}

.contentWrap {
  width: 100%;
  height: calc(100% - 58px);
  padding: 18px;
  overflow-y: auto;
}
.itemWrap {
  width: 302px;
  border: 1px solid #e8e8e8;
  border-radius: 8px;
  box-shadow: 0 4px 7px 0 rgba(199, 201, 210, 0.5);
  background: #f2f2f2;
  margin-bottom: 21px;
}
.itemWrap:global(.active) {
  border: 1px solid rgba(204, 204, 204, .6);
  box-shadow: 0 4px 7px 0 rgba(94, 219, 237, .3)
}
.itemWrap:global(.active) .itemHeader {
  background-color:  #7da2f5;
}
.itemHeader {
  width: 100%;
  height: 38px;
  line-height: 38px;
  padding-left: 20px;
  background: #e2e2e3;
  position: relative;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
.iconWrap {
  position: absolute;
  right: 14px;
  top: 10px;
  width: 16px;
  height: 16px;
  line-height: 16px;
  border-radius: 50%;
  background-color: #919191;
  color: #fff;
  text-align: center;
  font-size: 10px;
  cursor: pointer;
}
.itemRule {
  width: 302px;
  height: 47px;
  padding: 0 12px 0 18px;
  background: #ebebeb;
}
.contentWrap input {
  padding-left: 4px;
}
.addRule > label,
.itemRule > label {
  width: calc(100% - 220px);
  margin-right: 8px;
  line-height: 47px;
  float: left;
  text-align: right;
}
.addRule > .ruleLable {
  display: none;
}
.inputWrap {
  float: left;
  margin-top: 8px;
}
.inputWrap > input,
.addRule > input {
  width: 212px;
  height: 32px;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
  background: #ffffff;
}
.addRule {
  margin-top: 12px;
  padding: 0px 11px 0 16px;
  position: relative;
}
.addRule > label {
  line-height: 30px;
}

.addRule > input.ruleName {
  width: 55px;
  margin-right: 6px;
  display: none;
}
.addRule > .ruleName:global(.show) {
  display: inline-block;
}

.addRule > .iconWrap {
  top: 8px;
  display: none;
}
.addRule:hover > .iconWrap {
  display: block;
}
.addRule:hover > .ruleText {
  width: 188px;
}
.addIcon {
  text-align: center;
  margin: 12px 0 12px 0;
  cursor: pointer;
}
.addIcon > i {
  width: 16px;
  height: 16px;
  line-height: 16px;
  border-radius: 50%;
  background: #70ce7b;
  color: #fff;
  margin-right: 8px;
  text-align: center;
  font-size: 10px
}
.addIcon > span {
  font-size: 14px;
  color: #666;
  letter-spacing: 0;
  text-align: left;
}
