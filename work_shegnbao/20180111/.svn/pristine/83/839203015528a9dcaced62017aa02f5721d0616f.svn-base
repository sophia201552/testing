.tab-container {
  position: relative;
  height: 100%;
}
.tab-menu {
  width: 100%;
  height: 32px;
  background: rgb(47, 59, 85);
  border-top: 1px solid rgb(35, 45, 71);
}
.tab-pane {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 32px;
  background: #f5f8f9;
}
.tab-menu-item {
  display: inline-block;
  padding: 0 16px;
  height: 32px;
  line-height: 32px;
  color: rgb(152, 166, 183);
  cursor: pointer;
  user-select: none;
  border-left: 1px solid rgba(23, 29, 52, 0.6);
}
.tab-menu-item.active {
  background: #fff;
  color: rgb(29, 29, 29);
  cursor: pointer;
}
.tab-menu-item span:last-child{
  vertical-align: middle
}
.tab-menu-item span:first-child {
  width: 16px;
  height: 16px;
  line-height: 14px;
  border-radius: 2px;
  border: solid 1px transparent;
  display: inline-block;
  text-align: center;
  margin-right: 4px;
  vertical-align: middle;
}
.tab-menu-item:hover span:first-child {
  border-color: rgb(58, 62, 76);
}
.tab-menu-item.active:hover span:first-child {
  border-color: rgba(152, 166, 183, 0.1) !important;
}
.tab-menu-item.active i {
  color: rgb(29, 29, 29);
}
.tab-menu-item > i {
  color: rgb(152, 166, 183);
  padding-right: 4px;
  line-height: 14px;
  vertical-align: bottom;
  font-size: 6px;
}
