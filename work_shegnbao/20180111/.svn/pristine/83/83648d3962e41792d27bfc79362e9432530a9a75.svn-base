/* confirm start */
button.btn {
  display: inline-block;
  margin-bottom: 0;
  font-weight: 500;
  text-align: center;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  border: 1px solid transparent;
  white-space: nowrap;
  line-height: 1.15;
  padding: 0 15px;
  font-size: 12px;
  border-radius: 4px;
  height: 28px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
  transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
  position: relative;
  color: rgba(0, 0, 0, 0.65);
  background-color: #fff;
  border-color: #d9d9d9;

  padding: 0 15px;
  font-size: 14px;
  border-radius: 4px;
  height: 32px;
  outline: 0;
}
button.btn:hover {
  color: #108ee9;
  background-color: #fff;
  border-color: #108ee9;
}
button.btn.primary {
  color: #fff;
  background-color: #108ee9;
  border-color: #108ee9;
}
.confirmWrap {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000010;
}
.confirmWrap .modalWrap {
  position: fixed;
  overflow: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  -webkit-overflow-scrolling: touch;
  outline: 0;
}
.confirmWrap .modalWrap .contentWrap {
  width: 416px;
  transform-origin: 464.5px -60px 0px;
  position: relative;
  margin: 0 auto;
  top: 100px;
  padding-bottom: 24px;
}
.confirmWrap .modalWrap .content {
  position: relative;
  background-color: #fff;
  border: 0;
  border-radius: 4px;
  background-clip: padding-box;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}
.confirmWrap .modalWrap .content .bodyWrap {
  padding: 30px 40px;
  font-size: 12px;
  line-height: 1.5;
}
.confirmWrap .modalWrap .content .body {
  zoom: 1;
}
.confirmWrap .modalWrap .content .body:before {
  content: ' ';
  display: table;
}
.confirmWrap .modalWrap .content .body::after {
  display: table;
  content: ' ';
  clear: both;
  visibility: hidden;
  font-size: 0;
  height: 0;
}
.confirmWrap .modalWrap .content .top i {
  width: 24px;
  height: 24px;
  font-size: 24px;
  margin-right: 16px;
  padding: 0 1px;
  float: left;
  display: inline-block;
  font-style: normal;
  vertical-align: baseline;
  text-align: center;
  text-transform: none;
  line-height: 1;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.confirmWrap .modalWrap .content .top i.info {
  color: #108ee9;
}
.confirmWrap .modalWrap .content .top i.success {
  color: #00a854;
}
.confirmWrap .modalWrap .content .top i.warning {
  color: #ffbf00;
}
.confirmWrap .modalWrap .content .top i.error {
  color: #f04134;
}
.confirmWrap .modalWrap .content .title {
  color: rgba(0, 0, 0, 0.65);
  font-weight: 700;
  font-size: 14px;
  display: inline-block;
  width: calc(100% - 42px)
}
.confirmWrap .modalWrap .content .msg {
  margin-left: 42px;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.65);
  margin-top: 8px;
}
.confirmWrap .modalWrap .content .msg .input{
  height: 28px;
  width: 80%;
  border-radius: 4px;
  border: 1px solid #aaa;
  padding-left: 8px;
  line-height: 28px;
}
.confirmWrap .modalWrap .content .bottom {
  margin-top: 30px;
  float: right;
}
/* confirm end */
