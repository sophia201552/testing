.forecastPanel {
  width: 100%;
  height: 100%;
}
.leftCtn {
  width: 200px;
  height: 100%;
  float: left;
}
.rightCtn {
  width: calc(100% - 200px);
  height: 100%;
  float: left;
}
.leftCtn h3 {
  font-size: 14px;
  margin-bottom: 15px;
}
.leftCtn > div {
  padding: 15px;
  border-bottom: 1px solid #e8e9eb;
}
.leftCtn > div.bottomCtn {
  border-bottom: none;
}

.slider-time-picker {
  width: 100%;
  padding: 8px 0 0 14px;
  /* border-bottom: 2px solid #f1f3f4; */
}
.slider-time-picker > div {
  margin-bottom: 8px;
}

.slider-time-picker :global(.ms-TextField-fieldGroup) {
  width: 140px;
  height: 30px;
  border-radius: 4px;
  font-size: 12px;
  background-color: #f2f2f2;
  border-color: #e8e8e8 !important;
}
.slider-time-picker :global(.ms-TextField-fieldGroup:hover) {
  border-color: #e8e8e8;
}
.slider-time-picker :global(.ms-TextField-fieldGroup) > input {
  font-size: 12px;
}

.slider-time-picker :global(.ms-TextField-fieldGroup) > i {
  font-size: 12px;
  line-height: 14px;
  right: 6px;
}
.leftCtn .checkBoxCtn .lableName {
  color: #555555;
}
.rightCtn .details-close {
  height: 33px;
  border-left: 1px solid #f5f5f6;
}
.rightCtn .details-container {
  height: calc(100% - 33px);
  background: rgba(245, 245, 246, 1);
  padding: 20px;
}
.echartsCtn,
.footTable {
  width: 100%;
  background: #ffffff;
  border: 1px solid #e8ebf4;
}
.echartsCtn {
  height: 260px;
}
.footTable {
  margin-top: 20px;
  height: calc(100% - 280px);
  padding: 15px 20px;
  overflow: auto;
}
.details-close span {
  border-radius: 50%;
  background: #aaaaaa;
  text-align: center;
  color: #ffffff;
  width: 20px;
  height: 20px;
  line-height: 20px;
  float: right;
  margin-right: 16px;
  margin-top: 6px;
}
.details-close i {
  font-size: 12px;
}
.footTable table {
  width: 100%;
  border-collapse: collapse;
}
.footTable thead {
  background: #f2f2f2;
}
.footTable th,
.footTable td {
  padding: 10px 6px;
  border: 1px solid #e8e8e8;
  text-align: center;
}
.footTable td:first-child,
.footTable td:last-child {
  width: 200px;
}
.footTable td span {
  display: inline-block;
  text-align: center;
}
/*checkBox start*/
.checkBoxCtn {
  padding: 2px 0;
}
.checkBoxCtn .check_tick_ctn {
  position: relative;
  display: flex;
  align-items: end;
}
.checkBoxCtn .check_tick_ctn > div {
  position: relative;
}
.checkBoxCtn .check_tick {
  position: absolute;
  visibility: hidden;
  cursor: pointer;
}
.checkBoxCtn .labelName {
  font-size: 12px;
  cursor: pointer;
  color: #555555;
}
.checkBoxCtn .check_tick + label {
  display: inline-block;
  background: #f2f2f2;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
  width: 12px;
  height: 12px;
  margin-right: 6px;
}
.checkBoxCtn .check_tick:checked + label {
  background: #4c84ff;
}
.checkBoxCtn .check_tick:checked + label:after {
  content: '';
  position: absolute;
  left: 3px;
  bottom: 8px;
  width: 4px;
  height: 2px;
  border: 2px solid #ffffff;
  border-top-color: transparent;
  border-right-color: transparent;
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
  transform: rotate(-45deg);
}
/*checkBox end*/
.leftCtn div:global(.ms-Dropdown-container) {
  padding: 0 15px 0 14px;
}

.Dropdown:global(.is-open) {
  margin-bottom: 19px;
  background: #f2f2f2;
  border-radius: 4px;
  height: 24px;
}
.Dropdown > span:first-child {
  height: 24px;
  line-height: 22px;
  background: #f2f2f2;
  font-size: 12px;
  letter-spacing: 0;
}
.Dropdown > span:first-child,
.Dropdown:hover > span:first-child,
.Dropdown:focus > span:first-child {
  border-color: #e8e8e8;
  border-radius: 4px;
  color: #999;
}
.Dropdown > span:last-child {
  height: 24px;
  line-height: 22px;
  right: 4px;
}
