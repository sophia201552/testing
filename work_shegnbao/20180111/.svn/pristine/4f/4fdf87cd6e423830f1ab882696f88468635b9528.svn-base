<div class="platform publicPartialStyle">
    <header id="top" class="header">
        <div class="text-vertical-center">
            <div data-scroll-reveal>
                <h3 i18n="home.PLATFORM_URSERS"></h3>
                <div class="energy_bottom_line"></div>
            </div>
            <br>
            <div class="top_text" data-scroll-reveal="enter top" i18n="Platform.SUBTITLE"></div>
        </div>
        <p class="scroll-to-bottom" i18n="home.SCROLL_TO_SATAR"></p>
        <div class="mouse"></div>
    </header>
    <div class="content">
        <div class="contentTitle">
            <h3 class="sec-title" i18n="Iot.SEC_TITLE"></h3>
            <div class="blackLine"></div>
        </div>
        <div class="contentCtn">
            <div class="row shadowBox">
                <div class="col-xs-4" data-scroll-reveal="enter bottom">
                    <div>
                        <div class="imageBox">
                            <img src="../v2/img/platform/one.png" alt="" width="100%">
                        </div>
                        <div class="fontCtn">
                            <p class="subTitleName" i18n="Platform.ITEM_TITLE_ONE"></p>
                            <div class="blackLine"></div>
                            <p class="description" i18n="Platform.ITEM_TITLE_DESC_ONE"></p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4" data-scroll-reveal="enter bottom">
                    <div>
                        <div class="imageBox">
                            <img src="../v2/img/platform/two.png" alt="" width="100%">
                        </div>
                        <div class="fontCtn">
                            <p class="subTitleName" i18n="Platform.ITEM_TITLE_TWO"></p>
                            <div class="blackLine"></div>
                            <p class="description" i18n="Platform.ITEM_TITLE_DESC_TWO"></p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4" data-scroll-reveal="enter bottom">
                    <div>
                        <div class="imageBox">
                            <img src="../v2/img/platform/three.png" alt="" width="100%">
                        </div>
                        <div class="fontCtn">
                            <p class="subTitleName" i18n="Platform.ITEM_TITLE_THREE"></p>
                            <div class="blackLine"></div>
                            <p class="description" i18n="Platform.ITEM_TITLE_DESC_THREE"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottomDiv" data-scroll-reveal="enter bottom">
                <div class="ellipsisHeader">
                    <div class="grayCircle"></div>
                    <div class="grayCircle"></div>
                    <div class="grayCircle"></div>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <img src="../v2/img/platform/four.png" alt="" width="100%">
                    </div>
                    <div class="col-xs-5">
                        <div class="rightTitle forMobile ">
                            <p i18n="Platform.RIGHT_TITLE"></p>
                            <div class="boderBox"></div>
                            <div class="borderBoxTop"></div>
                            <div class="borderBoxBottom"></div>
                        </div>
                        <div>
                            <div>
                                <p class="subTitleName" i18n="Platform.ITEM_TITLE_FOUR"></p>
                                <p class="description" i18n="Platform.ITEM_TITLE_DESC_FOUR"></p>
                            </div>
                            <div class="whiteLine"></div>
                            <div>
                                <p class="subTitleName" i18n="Platform.ITEM_TITLE_FIVE"></p>
                                <p class="description" i18n="Platform.ITEM_TITLE_DESC_FIVE"></p>
                            </div>
                        </div>
                    </div>
                    <div class="rightTitle forPc">
                        <p i18n="Platform.RIGHT_TITLE"></p>
                        <div class="boderBox"></div>
                        <div class="borderBoxTop"></div>
                        <div class="borderBoxBottom"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contentBottom">
        <div>
            <p class="subTitleName" i18n="Platform.BOTTOM_TITLE"></p>
            <div class="blackLine"></div>
            <div class="description">
                <div class="boxCtn">
                    <div class="box">
                        <div class="blackCrircle">1</div>
                        <p i18n="Platform.BOTTOM_CONTENT_ONE"></p>
                    </div>
                    <div class="box">
                        <div class="blackCrircle">2</div>
                        <p i18n="Platform.BOTTOM_CONTENT_TWO"></p>
                    </div>
                    <div class="box">
                        <div class="blackCrircle">3</div>
                        <p i18n="Platform.BOTTOM_CONTENT_THREE"></p>
                    </div>
                    <div class="box">
                        <div class="blackCrircle">4</div>
                        <p i18n="Platform.BOTTOM_CONTENT_FOUR"></p>
                    </div>
                </div>
                <div class="line"></div>
            </div>
        </div>
    </div>
</div>
